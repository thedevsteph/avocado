<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/avocado_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="A\nV\nO\nC\nA\nD\nO"
            android:textColor="@color/colorBlack"/>

    <ImageView
            android:id="@+id/avocado_image"
            app:layout_constraintTop_toBottomOf="@id/avocado_text"
            android:layout_marginTop="54dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:src="@drawable/ic_avocado"
            android:layout_height="200dp"/>

    <TextView
            android:id="@+id/login_button"
            app:layout_constraintTop_toBottomOf="@+id/avocado_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="54dp"
            android:text="LOGIN"
            android:gravity="center"
            android:background="@drawable/button_border"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="40dp"/>

    <TextView
            android:id="@+id/signup_button"
            app:layout_constraintTop_toBottomOf="@+id/login_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:text="SIGN UP"
            android:gravity="center"
            android:textColor="@color/colorAvocadoGreen"
            android:background="@drawable/button_border_green"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>